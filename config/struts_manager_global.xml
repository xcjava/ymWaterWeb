<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">  
<struts>

	<!-- 后台拦截器类 -->
	<package name="manager-global" extends="struts-default">
		<interceptors>
			<!-- 保护后台 -->
			<interceptor name="adminDefaultInterceptor" class="com.ymsino.water.view.web.manager.global.interceptor.Interceptor">
				
			</interceptor>
			
			<interceptor-stack name="managerInterceptor">
				<interceptor-ref name="adminDefaultInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
			
		</interceptors>
	
		<global-results>
			<result name="login">/WEB-INF/jsp/manager/login.jsp</result>
			<result name="error">/WEB-INF/jsp/manager/error.jsp</result>
		</global-results>
		
		<!-- 后台登录 -->
		<action name="manager/login" class="com.ymsino.water.view.web.manager.global.Login">
			<result name="success">/WEB-INF/jsp/manager/index.jsp</result>
			<result name="fail">/WEB-INF/jsp/manager/login.jsp</result>
		</action>
		
		<!-- 后台注销 -->
		<action name="manager/logout" class="com.ymsino.water.view.web.manager.global.Logout">
			<result name="success">/WEB-INF/jsp/manager/login.jsp</result>
		</action>
		
		<!-- 后台页面头部 -->
		<action name="manager/header" class="com.ymsino.water.view.web.manager.global.Header">
			<result name="success">/WEB-INF/jsp/manager/header.jsp</result>
		</action>
		
		<action name="manager/main">
			<result name="success">/WEB-INF/jsp/manager/main.jsp</result>
		</action>
		
		<action name="manager/left">
			<result name="success">/WEB-INF/jsp/manager/left.jsp</result>
		</action>
		
		<action name="manager/down">
			<result name="success">/WEB-INF/jsp/manager/down.jsp</result>
		</action>
		
		<!-- 首页 -->
		<action name="manager/index">
			<result name="success">/WEB-INF/jsp/manager/index.jsp</result>
		</action>
	</package>

</struts>